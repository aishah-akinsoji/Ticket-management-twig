<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="public/style.css">
        <script src="https://kit.fontawesome.com/ad69c05094.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <title>{% block title %}Ticket Management system built with twig {% endblock %}</title>
    </head>
    <body>
        {% include 'toast.twig' %}
        {% set summaries = [
    { icon: '<i class="fa-solid fa-ticket"></i>', title: "Total tickets", color: "blue", no: ticketSummary.total },
    { icon: '<i class="fa-solid fa-circle-exclamation"></i>', title: "Open tickets", color: "green", no: ticketSummary.open },
    { icon: '<i class="fa-solid fa-spinner"></i>', title: "In progress", color: "orange", no: ticketSummary.resolved },
    { icon: '<i class="fa-solid fa-circle-check"></i>', title: "Resolved", color: "grey", no: ticketSummary.closed },
  ] %}
        <div class=='dashboard'>
      <header class='navbar navbar-expand-lg'>
        <div class='container'>
          <div class='d-flex justify-content-between align-items-center w-100'>
            <div class='logo'>
              <img src='public/fixMate-logo-transparent.png' alt="FixMate Logo"/>
            </div>
            <div>
              <p>Welcome, {{user}}</p>
            </div>
            <div class='d-flex gap-3'>
              <button class='coloured-btn' onclick="window.location.href='index.php?page=tickets'">View all your tickets</button>
              <button name="logout" class='logout rounded-3'  onclick="window.location.href='index.php?logout=1'">
                Logout
              </button>
            </div>
          </div>
        </div>
      </header>

      <main class='tickets d-flex align-items-center justify-content-center'>
        <div class='container'>
          <div class='row gap-3 py-4 align-items-center justify-content-center'>
            {% for stat in summaries %}
                <div class='card-hover col-sm-12 col-md-3 d-flex justify-content-center p-4 align-items-start border-0 gap-2 card shadow-lg rounded-4'>
                    <div class='stat-icon text-white p-2 d-flex justify-content-center align-items-center' style="background-color: {{stat.color}}; font-size: 1.5rem">
                    {{stat.icon|raw}}
                    </div>
                    <div class='lead'>{{stat.title}}</div>
                    <div class='fs-5 fw-bold' style="color: {{stat.color}}">{{stat.no}}</div>
                </div>
            {% endfor %}
          </div>
        </div>
      </main>
      {% include 'footer.twig' %}
    </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="public/script.js"></script>
    </body>
</html>